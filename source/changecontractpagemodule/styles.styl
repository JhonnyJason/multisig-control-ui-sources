// contractpage styles
picture-size = 90px

copy-icon-size = 15px

#changecontractpage-content
    input
        margin-top: 0
    h2
        margin-top: 5px
        color cd-dark
    h1 
        color cd-dark
    
    .known-contract
        background-color cd-dark
        padding 7px
        cursor pointer
        margin-bottom 3px
    p
        padding 7px
        font-size: 13pt
        color cd-flash

#known-contracts-container
    padding-top 15px
    padding-bottom 50px

#address-display
    width 100%
    background-color cd-dark
    display flex
    padding 7px
    box-sizing: border-box

    .display-frame-content
        text-overflow: ellipsis
        overflow hidden
        width "calc(100% - %s)" % copy-icon-size
    .copy-icon
        width copy-icon-size
        height copy-icon-size
